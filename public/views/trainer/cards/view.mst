{{#card}}
<ul class="crumbs">
	<li><a href="/">Home</a></li>
	<li><a href="/cards">Cards</a></li>
	<li>Card {{id}}</li>
</ul>
<article>
	<header>
		<h1>Card</h1>
	</header>
	<dl>
		<dt>ID:</label>
		<dd>{{id}}</dd>
		<dt>Type:</dt>
		<dd>User</dd>
		<dt id="user_label">User:</dt>
		<dd id="user">{{user}}</dd>
	</dl>
</article>
{{/card}}
{{^card}}
<article>
	<header>
		<h1>Card</h1>
	</header>
	<p>Sorry we couldn't find that</p>
</article>
{{/card}}