<ul class="crumbs">
	<li><a href="/">Home</a></li>
	<li>Cards</li>
</ul>
<article>
	<header>
		<h1>Cards</h1>
		<div class="button-group">
			<a href="/cards/add" class="default">Add</a>
		</div>
	</header>
	<form class="advanced_search" onsubmit="return false;">
		<label for="card">Search:</label>
		<input name="card" id="card" onchange="app.search_cards(this.form);" value="{{search.card}}" autocomplete="off" />
	</form>
	<table>
		<thead>
			<tr>
				<th>Card ID</th>
				<th>Type</th>
			</tr>
		</thead>
		<tbody>
			{{#cards}}<tr class="link" onclick="go('/cards/{{id}}', 'Cards');">
				<td>{{id}}</td>
				<td>{{card_type}}</td>
			</tr>{{/cards}}
			{{^cards}}<tr><td colspan="2">We did not find any cards</td></tr>{{/cards}}
		</tbody>
	</table>
</article>
	
